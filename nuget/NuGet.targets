<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">

	<PropertyGroup>
		<NuGetToolPath Condition="'$(NugetToolPath)'==''">$(MSBuildProjectDirectory)\nuget\NuGet.exe</NuGetToolPath>
		<NuGetSpecFileName Condition="'$(NuGetSpecFileName)'==''">$(MSBuildProjectDirectory)\nuget\RegexRouting.nuspec</NuGetSpecFileName>
	</PropertyGroup>

	<PropertyGroup>
		<AfterBuildDependsOn>
			Pack
		</AfterBuildDependsOn>
	</PropertyGroup>
	
	<Target Name="AfterBuild" DependsOnTargets="$(AfterBuildDependsOn)" />

	<Target Name="Pack">
		<Exec
			Command="&quot;$(NuGetToolPath)&quot; pack &quot;$(NuGetSpecFileName)&quot; -Properties Configuration=$(Configuration) -OutputDirectory &quot;$(OutDir.TrimEnd('\\'))&quot;" />
	</Target>
	
</Project> 